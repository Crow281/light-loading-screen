{
    "name": "@crow281/light-loading-screen",
    "private": false,
    "license": "MIT",
    "version": "1.0.1",
    "keywords": [
        "light",
        "promise",
        "loading"
    ],
    "description": "A simple lightweight loading screen to display an animation until everything is loaded.",
    "author": "crow281",
    "contributors": [],
    "scripts": {
        "lint": "eslint src/",
        "format": "prettier src/ --write",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup --config rollup.config.mjs",
        "build": "npm run build:js && npm run build:types",
        "doc": "typedoc"
    },
    "files": [
        "dist",
        "src",
        "LICENSE",
        "README.md"
    ],
    "homepage": "https://github.com/Crow281/light-loading-screen",
    "bugs": "https://github.com/Crow281/light-loading-screen/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/Crow281/light-loading-screen"
    },
    "type": "module",
    "sideEffects": false,
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/plugin-transform-runtime": "^7.25.9",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.26.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^28.0.1",
        "@rollup/plugin-node-resolve": "^15.3.0",
        "@trivago/prettier-plugin-sort-imports": "^5.1.0",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.13.0",
        "prettier-plugin-svelte": "^3.3.2",
        "rollup": "^4.28.1",
        "rollup-plugin-delete": "^2.1.0",
        "rollup-plugin-includepaths": "^0.2.4",
        "rollup-plugin-node-externals": "^7.1.3",
        "typedoc": "^0.27.3",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.17.0"
    },
    "peerDependencies": {
    },
    "dependencies": {
        "@babel/runtime": "^7.26.0"
    }
}
